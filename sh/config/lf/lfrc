#!/bin/bash
## lf config
map . set hidden! 
map <esc> quit
map i set icons!
# map F setfilterF
map <c-r> reload
map <c-q> quit
cmap <c-d> ""
map <c-d> quit
map <?> maps
map <pgdn> half-down
map <s-down> invert-below
map <pgup> half-up
map <a-up> top
map <a-down> bottom
map <s-up> :invert && :invert-below 
map M set mouse!
map <c-a> invert glob-select *
map a invert glob-select *
map <lt> :cd /ants
map n toch 
map <tab> :push :<tab> 
map <delete> delete
map d trash
map zu unzip
map zz zip
map c copy
map ss :search 
map sp :set preview! 
map s0 :set ratios 1
map s1 :set ratios 1:1
